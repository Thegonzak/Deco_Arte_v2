<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Deco_Arte_v2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/NaranjaProfundo</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.Deco_Arte_v2">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="Theme.Deco_Arte_v2.Fullscreen" parent="Theme.Deco_Arte_v2">
        <item name="android:actionBarStyle">@style/Widget.Theme.Deco_Arte_v2.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Deco_Arte_v2.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>